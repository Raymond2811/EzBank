<header id="header">
  <div id="logo-container">
    <h1>EZ Bank</h1>
    <p>Banking Made EZ</p>
  </div>
  <nav id="header-content">
    <div id="about-us">
      <a href="/aboutus"><h2>About Us</h2></a>
      <a id="logout" href="#"><h2>Logout</h2></a>
    </div>
  </nav>
</header>

<main>
  <div class="account-purchase">
    <h2>{{name}}</h2>
    <p>Balance: ${{balance}}</p>

    <fornm id="transactionForm">
      <label for="price"> Price: </label>
      <input type="number" id="price" name="price" required>

      <label for="description">Description:</label>
      <input type="text" id="description" name="description" required>

      <button type="submit"> Submit Transaction</button>
    </fornm>

    <div class="transaction-history">
      <h3>Transaction History</h3>
      {{#if transactions.length}}
        <ul>
          {{#each transactions}}
            <li>{{this}}</li>
          {{/each}}
        </ul>
      {{else}}
        <p>No transactions available.</p>
      {{/if}}
    </div>
  </div>
</main>

<footer>
  <div class="contact-info">
    <h3>Contact Us</h3>
    <p>For inquiries and assistance, feel free to reach out:</p>
    <ul>
      <li>Phone: +1 (555) 123-4567</li>
      <li>Email: info@ezbanksupport.com</li>
    </ul>
  </div>

  <div class="social-media">
    <h3>Connect With Us</h3>
    <ul>
      <li><a
          href="https://www.facebook.com"
          target="_blank"
          rel="noopener noreferrer"
        >Facebook</a></li>
