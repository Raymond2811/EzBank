<header id="header">
  <div id="logo-container">
    <h1>EZ Bank</h1>
    <p>Banking Made EZ</p>
  </div>
  <nav id="header-content">
    <div id="about-us">
      <a href="/aboutus"><h2>About Us</h2></a>
    </div>
  </nav>
</header>

<section class="login-section">
  <div class="form">
    <div class="login">
      <div class="login-header">
        <h3>LOGIN</h3>
        <p>Please enter your credentials to login.</p>
      </div>
    </div>
    <form class="login-form">
      <input id="email-login" type="text" placeholder="email"/>
      <input id="password-login" type="password" placeholder="password"/>
      <input type="checkbox" id="show-password">
      <label for="show-password" id="show-password-label">Show Password</label>
      <button type="submit">login</button>
      <p class="message">Not registered? <a href="/signup">Create an account</a></p>
    </form>
  </div>
   
  <div class="ezcard-copy">
    <img src="/css/images/ezcard-copy1.jpg" alt="EZ BANK credit cards" class="ezcard-copy">
  </div>
</section>

<script src="/js/login.js"></script>